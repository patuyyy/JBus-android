<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/bgfigma3"
    tools:context=".LoginActivity">

    <RelativeLayout
        android:id="@+id/bgputih"
        android:layout_width="340dp"
        android:layout_height="300dp"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="140dp"
        android:background="@drawable/roundedrectangle"
        android:outlineAmbientShadowColor="@color/black">
        <TextView
            android:id="@+id/initial"
            android:layout_width="90dp"
            android:layout_height="90dp"
            android:textSize="60dp"
            android:textStyle="bold"
            android:textAlignment="center"
            android:textColor="#8ECDDD"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="28dp"
            android:background="@drawable/oval"
            android:backgroundTint="#22668D"
            tools:text="-"
            />
        <TextView
            android:id="@+id/username"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColor="#8ECDDD"
            android:textSize="23dp"
            android:gravity="center"
            android:layout_below="@id/initial"
            android:typeface="monospace"
            android:layout_marginTop="18dp"
            tools:text="-"
            />
        <TextView
            android:id="@+id/emailtxt"
            android:layout_width="100dp"
            android:layout_height="wrap_content"
            android:text="Email     :"
            android:textSize="20dp"
            android:layout_marginTop="20dp"
            android:layout_marginLeft="20dp"
            android:layout_below="@id/username"
            />
        <TextView
            android:id="@+id/emaildata"
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:layout_below="@id/username"
            android:gravity="left"
            android:textSize="20dp"
            android:layout_marginLeft="110dp"
            android:layout_marginTop="20dp"
            tools:text="-"
            />
        <TextView
            android:id="@+id/balancetxt"
            android:layout_width="100dp"
            android:layout_height="wrap_content"
            android:text="Balance :"
            android:textSize="20dp"
            android:layout_marginTop="25dp"
            android:layout_marginLeft="20dp"
            android:layout_below="@id/emailtxt"
            />

        <TextView
            android:id="@+id/balancedata"
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:layout_below="@id/emailtxt"
            android:layout_marginTop="25dp"
            android:layout_marginLeft="110dp"
            android:gravity="left"
            android:textSize="20dp"
            tools:text="-" />
    </RelativeLayout>
    <RelativeLayout
        android:id="@+id/bgputih2"
        android:layout_width="340dp"
        android:layout_height="150dp"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="20dp"
        android:background="@drawable/roundedrectangle"
        android:outlineAmbientShadowColor="@color/black"
        android:layout_below="@id/bgputih">
        <EditText
            android:id="@+id/amount"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:background="@drawable/roundedrectangle"
            android:backgroundTint="#FFFADD"
            android:layout_marginTop="20dp"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"
            android:hint="AMOUNT"
            android:textColorHint="#8ECDDD"
            android:textColor="#8ECDDD"
            android:paddingHorizontal="110dp"
            android:gravity="center"
            />
        <Button
            android:id="@+id/topup"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@drawable/roundedrectangle"
            app:backgroundTint="#FFCC70"
            android:layout_below="@id/amount"
            android:layout_marginTop="15dp"
            android:layout_marginLeft="60dp"
            android:layout_marginRight="60dp"
            android:layout_marginBottom="20dp"
            android:text="TOP UP"
            android:textColor="#FFFADD"
            />
        </RelativeLayout>

    <TextView
        android:id="@+id/myacctxt"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="My Profile"
        android:typeface="monospace"
        android:textColor="#22668D"
        android:textSize="40dp"
        android:layout_marginTop="60dp"
        android:layout_marginBottom="0dp"
        android:gravity="center"
        android:textStyle="bold"
        />

</RelativeLayout>