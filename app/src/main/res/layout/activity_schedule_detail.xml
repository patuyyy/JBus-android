<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/bgfigma3"
    tools:context=".ScheduleDetailActivity">

    <TextView
        android:id="@+id/makebookingtxt"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Make Booking"
        android:typeface="monospace"
        android:textColor="#22668D"
        android:textSize="30dp"
        android:layout_marginTop="10dp"
        android:layout_marginBottom="0dp"
        android:gravity="center"
        android:textStyle="bold"
        />

    <RelativeLayout
        android:id="@+id/bgputih"
        android:layout_below="@id/makebookingtxt"
        android:layout_width="380dp"
        android:layout_height="576dp"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="10dp"
        android:background="@drawable/roundedrectangle"
        android:outlineAmbientShadowColor="@color/black">
        <TextView
            android:id="@+id/notetext"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Your bus detail"
            android:textSize="20sp"
            android:layout_marginTop="10sp"
            android:gravity="center"
            />
        <TextView
            android:id="@+id/busname"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            tools:text="Bus name"
            android:textSize="18sp"
            android:layout_marginHorizontal="25sp"
            android:layout_below="@id/notetext"
            android:layout_marginTop="10dp"
            android:layout_marginBottom="5dp"
            android:background="@drawable/roundedrectangle2"
            android:backgroundTint="#FFFADD"
            android:drawableLeft="@drawable/bus_white"
            android:drawableTint="#A1FAB957"
            android:drawablePadding="15dp"
            android:padding="15dp"
            android:textColor="#8ECDDD"
            android:textColorHint="#8ECDDD"
            />
        <TextView
            android:id="@+id/capacity"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            tools:text="Capacity"
            android:textSize="18sp"
            android:layout_marginHorizontal="25sp"
            android:layout_below="@id/busname"
            android:layout_marginTop="5dp"
            android:layout_marginBottom="5dp"
            android:background="@drawable/roundedrectangle2"
            android:backgroundTint="#FFFADD"
            android:drawableLeft="@drawable/person_white"
            android:drawableTint="#A1FAB957"
            android:drawablePadding="15dp"
            android:padding="15dp"
            android:textColor="#8ECDDD"
            android:textColorHint="#8ECDDD"
            />
        <TextView
            android:id="@+id/price"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            tools:text="Price"
            android:textSize="18sp"
            android:layout_marginHorizontal="25sp"
            android:layout_below="@id/capacity"
            android:layout_marginTop="5dp"
            android:layout_marginBottom="5dp"
            android:background="@drawable/roundedrectangle2"
            android:backgroundTint="#FFFADD"
            android:drawableLeft="@drawable/paid_white"
            android:drawableTint="#A1FAB957"
            android:drawablePadding="15dp"
            android:padding="15dp"
            android:textColor="#8ECDDD"
            android:textColorHint="#8ECDDD"
            />
        <LinearLayout
            android:id="@+id/departurelayout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/price"
            android:orientation="horizontal"
            android:paddingHorizontal="20sp"
            android:layout_marginTop="10sp"
            android:layout_marginBottom="0dp"
            android:gravity="center">
            <TextView
                android:layout_width="96dp"
                android:layout_height="wrap_content"
                android:text="Departure"
                android:textSize="18dp"
                android:textColor="#22668D"/>
            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/house_white"
                app:tint="#22668D" />
            <TextView
                android:id="@+id/departuretxt"
                android:layout_width="match_parent"
                android:layout_height="48dp"
                tools:text="Departure"
                android:textSize="18sp"
                android:textColor="@color/black"
                android:gravity="center_vertical"
                android:layout_marginLeft="10sp"
                android:paddingLeft="5sp"
                />
        </LinearLayout>
        <LinearLayout
            android:id="@+id/arrivallayout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/departurelayout"
            android:orientation="horizontal"
            android:paddingHorizontal="20sp"
            android:layout_marginBottom="0dp"
            android:gravity="center">
            <TextView
                android:layout_width="96dp"
                android:layout_height="wrap_content"
                android:text="Arrival"
                android:textSize="18dp"
                android:textColor="#22668D"/>
            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/double_white"
                app:tint="#22668D" />
            <TextView
                android:id="@+id/arrivaltxt"
                android:layout_width="match_parent"
                android:layout_height="48dp"
                tools:text="Arrival"
                android:textSize="18sp"
                android:textColor="@color/black"
                android:gravity="center_vertical"
                android:layout_marginLeft="10sp"
                android:paddingLeft="5sp"
                />
        </LinearLayout>
        <LinearLayout
            android:id="@+id/schdulelayout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/arrivallayout"
            android:orientation="horizontal"
            android:paddingHorizontal="20sp"
            android:layout_marginBottom="0dp"
            android:gravity="center">
            <TextView
                android:layout_width="96dp"
                android:layout_height="wrap_content"
                android:text="Schedule"
                android:textSize="18dp"
                android:textColor="#22668D"/>
            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/calendar_white"
                app:tint="#22668D" />
            <Spinner
                android:id="@+id/schedule_dropdown"
                android:layout_width="match_parent"
                android:layout_height="48dp"
                android:layout_marginLeft="10sp"
                />
        </LinearLayout>
        <LinearLayout
            android:id="@+id/seatlayout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/schdulelayout"
            android:orientation="horizontal"
            android:paddingHorizontal="20sp"
            android:layout_marginBottom="0dp"
            android:gravity="center">
            <TextView
                android:layout_width="96dp"
                android:layout_height="wrap_content"
                android:text="Seat"
                android:textSize="18dp"
                android:textColor="#22668D"/>
            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/seat_white"
                app:tint="#22668D" />
            <Spinner
                android:id="@+id/seat_dropdown"
                android:layout_width="120sp"
                android:layout_height="48dp"
                android:layout_marginLeft="10sp"
                />
            <Button
                android:id="@+id/addbtn"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Add"
                android:background="@drawable/roundedrectangle2"
                app:backgroundTint="#22668D"
                android:layout_below="@id/seatlayout"
                android:gravity="center"/>
        </LinearLayout>
        <LinearLayout
            android:id="@+id/seatlistlayout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/seatlayout"
            android:orientation="horizontal"
            android:paddingHorizontal="20sp"
            android:layout_marginBottom="0dp"
            android:gravity="center_vertical">
            <TextView
                android:layout_width="96dp"
                android:layout_height="wrap_content"
                android:text="Seat to order"
                android:textSize="18dp"
                android:textColor="#22668D"/>
            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/seat_white"
                app:tint="#22668D" />
            <TextView
                android:id="@+id/seattoorder"
                android:layout_width="match_parent"
                tools:text="Seat list"
                android:layout_height="48dp"
                android:textSize="18sp"
                android:textColor="@color/black"
                android:gravity="center_vertical"
                android:layout_marginLeft="10sp"
                android:paddingLeft="5sp"/>
        </LinearLayout>


    </RelativeLayout>
    <Button
        android:id="@+id/makebookingbtn"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="120sp"
        android:layout_marginTop="615sp"
        android:text="Make Booking"
        android:background="@drawable/roundedrectangle2"
        app:backgroundTint="#22668D"
        android:gravity="center"
        android:textColor="@color/white"
        />
</RelativeLayout>