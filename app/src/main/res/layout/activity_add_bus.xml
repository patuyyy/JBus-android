<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/bgfigma3"
    tools:context=".AddBusActivity">

    <TextView
        android:id="@+id/addbustxt"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Add Bus"
        android:typeface="monospace"
        android:textColor="#22668D"
        android:textSize="30dp"
        android:layout_marginTop="10dp"
        android:layout_marginBottom="0dp"
        android:gravity="center"
        android:textStyle="bold"
        />

    <RelativeLayout
        android:id="@+id/bgputih"
        android:layout_below="@id/addbustxt"
        android:layout_width="380dp"
        android:layout_height="576dp"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="10dp"
        android:background="@drawable/roundedrectangle"
        android:outlineAmbientShadowColor="@color/black">
        <TextView
            android:id="@+id/notetext"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Add or edit your bus"
            android:textSize="20sp"
            android:layout_marginTop="10sp"
            android:gravity="center"
            />
        <EditText
            android:id="@+id/busname"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Bus name"
            android:layout_marginHorizontal="25sp"
            android:layout_below="@id/notetext"
            android:layout_marginTop="10dp"
            android:layout_marginBottom="5dp"
            android:background="@drawable/roundedrectangle2"
            android:backgroundTint="#FFFADD"
            android:drawableLeft="@drawable/bus_white"
            android:drawableTint="#A1FAB957"
            android:drawablePadding="15dp"
            android:padding="15dp"
            android:textColor="#8ECDDD"
            android:textColorHint="#8ECDDD"
            />
        <EditText
            android:id="@+id/capacity"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Capacity"
            android:layout_marginHorizontal="25sp"
            android:layout_below="@id/busname"
            android:layout_marginTop="5dp"
            android:layout_marginBottom="5dp"
            android:background="@drawable/roundedrectangle2"
            android:backgroundTint="#FFFADD"
            android:drawableLeft="@drawable/person_white"
            android:drawableTint="#A1FAB957"
            android:drawablePadding="15dp"
            android:padding="15dp"
            android:textColor="#8ECDDD"
            android:textColorHint="#8ECDDD"
            />
        <EditText
            android:id="@+id/price"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Price"
            android:layout_marginHorizontal="25sp"
            android:layout_below="@id/capacity"
            android:layout_marginTop="5dp"
            android:layout_marginBottom="5dp"
            android:background="@drawable/roundedrectangle2"
            android:backgroundTint="#FFFADD"
            android:drawableLeft="@drawable/paid_white"
            android:drawableTint="#A1FAB957"
            android:drawablePadding="15dp"
            android:padding="15dp"
            android:textColor="#8ECDDD"
            android:textColorHint="#8ECDDD"
            />
        <LinearLayout
            android:id="@+id/bustypelayout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/price"
            android:orientation="horizontal"
            android:paddingHorizontal="20sp"
            android:layout_marginBottom="0dp"
            android:gravity="center">
            <TextView
                android:layout_width="96dp"
                android:layout_height="wrap_content"
                android:text="Bus Type"
                android:textSize="18dp"
                android:textColor="#22668D"/>
            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/bus_white"
                app:tint="#22668D" />
            <Spinner
                android:id="@+id/bus_type_dropdown"
                android:layout_width="match_parent"
                android:layout_height="48dp"
                android:layout_marginLeft="10sp"
                />
        </LinearLayout>
        <LinearLayout
            android:id="@+id/departurelayout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/bustypelayout"
            android:orientation="horizontal"
            android:paddingHorizontal="20sp"
            android:layout_marginBottom="0dp"
            android:gravity="center">
            <TextView
                android:layout_width="96dp"
                android:layout_height="wrap_content"
                android:text="Departure"
                android:textSize="18dp"
                android:textColor="#22668D"/>
            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/house_white"
                app:tint="#22668D" />
            <Spinner
                android:id="@+id/departure_dropdown"
                android:layout_width="match_parent"
                android:layout_height="48dp"
                android:layout_marginLeft="10sp"
                />
        </LinearLayout>
        <LinearLayout
            android:id="@+id/arrivallayout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/departurelayout"
            android:orientation="horizontal"
            android:paddingHorizontal="20sp"
            android:layout_marginBottom="0dp"
            android:gravity="center">
            <TextView
                android:layout_width="96dp"
                android:layout_height="wrap_content"
                android:text="Arrival"
                android:textSize="18dp"
                android:textColor="#22668D"/>
            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/double_white"
                app:tint="#22668D" />
            <Spinner
                android:id="@+id/arrival_dropdown"
                android:layout_width="match_parent"
                android:layout_height="48dp"
                android:layout_marginLeft="10sp"
                />
        </LinearLayout>
        <TextView
            android:id="@+id/facilitiestext"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Facilities"
            android:layout_below="@id/arrivallayout"
            android:layout_marginHorizontal="20dp"
            android:textSize="20sp"
            />
        <GridLayout
            android:id="@+id/gridlayout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:columnCount="3"
            android:rowCount="3"
            android:useDefaultMargins="true"
            android:layout_below="@id/facilitiestext">
            <CheckBox
                android:id="@+id/acbox"
                android:text="AC"
                android:layout_margin="0dp"
                android:layout_marginLeft="20sp"
                />
            <CheckBox
                android:id="@+id/wifibox"
                android:text="WIFI"
                android:layout_margin="0dp"
                android:layout_marginLeft="20sp"
                />
            <CheckBox
                android:id="@+id/toiletbox"
                android:layout_margin="0dp"
                android:text="TOILET"
                android:layout_marginLeft="20sp"
                />
            <CheckBox
                android:id="@+id/lcdtvbox"
                android:layout_margin="0dp"
                android:text="LCD TV"
                android:layout_marginLeft="20sp"
                />
            <CheckBox
                android:id="@+id/coolboxbox"
                android:layout_margin="0dp"
                android:text="COOLBOX"
                android:layout_marginLeft="20sp"
                />
            <CheckBox
                android:id="@+id/lunchbox"
                android:layout_margin="0dp"
                android:text="LUNCH"
                android:layout_marginLeft="20sp"
                />
            <CheckBox
                android:id="@+id/baggagebox"
                android:layout_margin="0dp"
                android:text="LARGE\nBAGGAGE"
                android:layout_marginLeft="20sp"
                />
            <CheckBox
                android:id="@+id/socketbox"
                android:layout_margin="0dp"
                android:text="ELECTRIC\nSOCKET"
                android:layout_marginLeft="20sp"
                />
        </GridLayout>
    </RelativeLayout>
    <Button
        android:id="@+id/addbtn"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="120sp"
        android:layout_marginTop="615sp"
        android:text="ADD BUS"
        android:background="@drawable/roundedrectangle2"
        app:backgroundTint="#22668D"
        android:gravity="center"
        android:textColor="@color/white"
        />



</RelativeLayout>