<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/bgfigma1"
    tools:context=".LoginActivity">

    <TextView
        android:id="@+id/jbus"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10sp"
        android:layout_marginBottom="0dp"
        android:gravity="center"
        android:text="JBUS MAIN\nðŸšŒ"
        android:textColor="#22668D"
        android:textSize="30sp"
        android:textStyle="bold"
        android:typeface="monospace" />
    <androidx.appcompat.widget.SearchView
        android:id="@+id/searchbar"
        android:layout_width="300sp"
        android:layout_height="wrap_content"
        app:iconifiedByDefault="false"
        android:layout_below="@id/jbus"
        android:layout_centerInParent="true"
        app:queryHint="Bus name"
        >

    </androidx.appcompat.widget.SearchView>

    <RelativeLayout
        android:id="@+id/listbg"
        android:layout_width="300dp"
        android:layout_height="420dp"
        android:layout_below="@id/searchbar"
        android:background="@drawable/roundedrectangle2"
        android:layout_marginLeft="56dp"
        android:layout_marginTop="10dp"
        android:backgroundTint="@color/white"
        >
        <LinearLayout
            android:id="@+id/filtertext"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Pick Departure station"
                android:textSize="18sp"
                android:gravity="center"
                android:layout_marginTop="10sp"
                />
        </LinearLayout>
        <LinearLayout
            android:id="@+id/filterbar1"
            android:layout_marginHorizontal="5sp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/filtertext"
            android:orientation="horizontal">
            <Button
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:id="@+id/all"
                android:text="All"
                android:backgroundTint="#8ECDDD"
                android:onClick="allFilterTapped"/>
            <Button
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:id="@+id/jatijajar"
                android:textSize="11sp"
                android:text="Jatijajar"
                android:backgroundTint="#8ECDDD"
                android:onClick="jatijajarFilterTapped"/>
            <Button
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:id="@+id/manggarai"
                android:textSize="9.7sp"
                android:text="manggarai"
                android:backgroundTint="#8ECDDD"
                android:onClick="manggaraiFilterTapped"/>
        </LinearLayout>
        <LinearLayout
            android:id="@+id/filterbar2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="3sp"
            android:layout_below="@id/filterbar1"
            android:orientation="horizontal">
            <Button
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:id="@+id/sukabumi"
                android:text="sukabumi"
                android:textSize="11sp"
                android:backgroundTint="#8ECDDD"
                android:onClick="sukabumiFilterTapped"/>
            <Button
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:id="@+id/purabaya"
                android:textSize="11sp"
                android:text="purabaya"
                android:backgroundTint="#8ECDDD"
                android:onClick="purabayaFilterTapped"/>
            <Button
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:id="@+id/giwangan"
                android:textSize="10sp"
                android:text="giwangan"
                android:backgroundTint="#8ECDDD"
                android:onClick="giwanganFilterTapped"/>
        </LinearLayout>
        <ListView
            android:id="@+id/listbus"
            android:layout_below="@id/filterbar2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:layout_marginBottom="30dp"
            android:layout_marginHorizontal="20dp"
            />
    </RelativeLayout>

    <LinearLayout
        android:id="@+id/pagination_footer"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:orientation="horizontal"
        android:paddingHorizontal="30dp"
        android:layout_marginTop="20dp"
        android:layout_below="@id/listbg">
        <Button
            android:id="@+id/prev_page"
            android:layout_width="56dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:backgroundTint="#FFCC70"
            android:drawableLeft="@drawable/baseline_arrow_back_ios_24"
            android:minHeight="0dp" />
        <HorizontalScrollView
            android:id="@+id/page_number_scroll"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="25"
            android:paddingHorizontal="18dp">
            <LinearLayout
                android:id="@+id/btn_layout"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal"/>
        </HorizontalScrollView>
        <Button
            android:id="@+id/next_page"
            android:layout_width="56dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:backgroundTint="#FFCC70"
            android:drawableLeft="@drawable/baseline_arrow_forward_ios_24"
            android:minHeight="0dp"/>
    </LinearLayout>


</RelativeLayout>