<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/bgfigma2"
    tools:context=".PaymentDetailActivity">

    <TextView
        android:id="@+id/orderttxt"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Order Detail"
        android:typeface="monospace"
        android:textColor="#22668D"
        android:textSize="30dp"
        android:layout_marginTop="10dp"
        android:layout_marginBottom="0dp"
        android:gravity="center"
        android:textStyle="bold"
        />

    <RelativeLayout
        android:id="@+id/bgputih"
        android:layout_below="@id/orderttxt"
        android:layout_width="380dp"
        android:layout_height="576dp"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="10dp"
        android:background="@drawable/roundedrectangle"
        android:outlineAmbientShadowColor="@color/black">
        <TextView
            android:id="@+id/notetext"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Order detail"
            android:textSize="20sp"
            android:layout_marginTop="10sp"
            android:gravity="center"
            />
        <TextView
            android:id="@+id/busname"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            tools:text="Bus name"
            android:textSize="18sp"
            android:layout_marginHorizontal="25sp"
            android:layout_below="@id/notetext"
            android:layout_marginTop="10dp"
            android:layout_marginBottom="5dp"
            android:background="@drawable/roundedrectangle2"
            android:backgroundTint="#FFFADD"
            android:drawableLeft="@drawable/bus_white"
            android:drawableTint="#A1FAB957"
            android:drawablePadding="15dp"
            android:padding="15dp"
            android:textColor="#8ECDDD"
            android:textColorHint="#8ECDDD"
            />
        <TextView
            android:id="@+id/seattxt"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            tools:text="Seat"
            android:textSize="18sp"
            android:layout_marginHorizontal="25sp"
            android:layout_below="@id/busname"
            android:layout_marginTop="5dp"
            android:layout_marginBottom="5dp"
            android:background="@drawable/roundedrectangle2"
            android:backgroundTint="#FFFADD"
            android:drawableLeft="@drawable/person_white"
            android:drawableTint="#A1FAB957"
            android:drawablePadding="15dp"
            android:padding="15dp"
            android:textColor="#8ECDDD"
            android:textColorHint="#8ECDDD"
            />
        <TextView
            android:id="@+id/price"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            tools:text="Price"
            android:textSize="18sp"
            android:layout_marginHorizontal="25sp"
            android:layout_below="@id/seattxt"
            android:layout_marginTop="5dp"
            android:layout_marginBottom="5dp"
            android:background="@drawable/roundedrectangle2"
            android:backgroundTint="#FFFADD"
            android:drawableLeft="@drawable/paid_white"
            android:drawableTint="#A1FAB957"
            android:drawablePadding="15dp"
            android:padding="15dp"
            android:textColor="#8ECDDD"
            android:textColorHint="#8ECDDD"
            />
        <LinearLayout
            android:id="@+id/buyername"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/price"
            android:orientation="horizontal"
            android:paddingHorizontal="20sp"
            android:layout_marginBottom="0dp"
            android:gravity="center">
            <TextView
                android:layout_width="96dp"
                android:layout_height="wrap_content"
                android:text="Buyer"
                android:textSize="18dp"
                android:textColor="#22668D"/>
            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/person_white"
                app:tint="#22668D" />
            <TextView
                android:id="@+id/buyertxt"
                android:layout_width="match_parent"
                android:layout_height="48dp"
                tools:text="Buyer Name"
                android:textSize="18sp"
                android:textColor="@color/black"
                android:gravity="center_vertical"
                android:layout_marginLeft="10sp"
                android:paddingLeft="5sp"
                />
        </LinearLayout>
        <LinearLayout
            android:id="@+id/departurelayout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/buyername"
            android:orientation="horizontal"
            android:paddingHorizontal="20sp"
            android:layout_marginBottom="0dp"
            android:gravity="center">
            <TextView
                android:layout_width="96dp"
                android:layout_height="wrap_content"
                android:text="Departure"
                android:textSize="18dp"
                android:textColor="#22668D"/>
            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/house_white"
                app:tint="#22668D" />
            <TextView
                android:id="@+id/departuretxt"
                android:layout_width="match_parent"
                android:layout_height="48dp"
                tools:text="Departure"
                android:textSize="18sp"
                android:textColor="@color/black"
                android:gravity="center_vertical"
                android:layout_marginLeft="10sp"
                android:paddingLeft="5sp"
                />
        </LinearLayout>
        <LinearLayout
            android:id="@+id/schedulelayout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/departurelayout"
            android:orientation="horizontal"
            android:paddingHorizontal="20sp"
            android:layout_marginBottom="0dp"
            android:gravity="center">
            <TextView
                android:layout_width="96dp"
                android:layout_height="wrap_content"
                android:text="Schedule"
                android:textSize="18dp"
                android:textColor="#22668D"/>
            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/calendar_white"
                app:tint="#22668D" />
            <TextView
                android:id="@+id/scheduledata"
                android:layout_width="match_parent"
                android:layout_height="48dp"
                tools:text="Schedule"
                android:textSize="18sp"
                android:textColor="@color/black"
                android:gravity="center_vertical"
                android:layout_marginLeft="10sp"
                android:paddingLeft="5sp"
                />
        </LinearLayout>
        <TextView
            android:id="@+id/paymentstatustxt"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Payment Status :"
            android:layout_below="@id/schedulelayout"
            android:gravity="center"
            android:textSize="20sp"
            android:layout_marginTop="5sp"
            />
        <TextView
            android:id="@+id/paymentstatusdata"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/paymentstatustxt"
            android:text="STATUS"
            android:gravity="center"
            android:textSize="25sp"
            android:fontFamily="monospace"
            android:textColor="#22668D"
            android:layout_marginTop="5sp"
            />
    </RelativeLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="530sp"
        android:layout_centerHorizontal="true"
        android:gravity="center">
        <Button
            android:id="@+id/acceptbtn"
            android:layout_width="150sp"
            android:layout_height="60sp"
            android:text="Accept payment"
            android:layout_marginRight="10sp"
            android:background="@drawable/roundedrectangle2"
            app:backgroundTint="#22668D"
            android:gravity="center"
            android:textColor="@color/white"
            android:visibility="visible"
            />
        <Button
            android:id="@+id/cancelbtn"
            android:layout_width="150sp"
            android:layout_height="60sp"
            android:layout_marginLeft="10sp"
            android:text="Cancel payment"
            android:background="@drawable/roundedrectangle2"
            app:backgroundTint="#22668D"
            android:gravity="center"
            android:textColor="@color/white"
            android:visibility="visible"
            />
    </LinearLayout>

</RelativeLayout>